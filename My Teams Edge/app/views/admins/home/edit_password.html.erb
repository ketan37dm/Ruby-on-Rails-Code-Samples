<%= form_for(@admin, :url => update_password_admins_home_index_path, html:{ class:'add-account'}) do |f| %>
	<div class="modal-head">
		<h2 class="form-signin-heading">Change Password</h2>
	</div>
	<div class="modal-body">
		<%= f.error_messages %>
		<%= f.password_field :current_password, class: "input-large", placeholder: 'Current Password'  %>
		<%= f.password_field :password, autocomplete: "off", class: "input-large", placeholder: 'New Password' %>
		<%= f.password_field :password_confirmation, class: "input-large", placeholder: 'Confirm New Password' %>
		<button type="submit" class="btn btn-info pull-right">Save Changes</button>
	</div>
<%end %>