<% if @new_opponent.errors.present? %>
  $("#schedule-message-opponent").html('<%= error_messages_for(@new_opponent) %>');
<% else %>
  $('#add-opponent-event').modal('hide');
  $('#scedule-upcoming-oppnents div.scroll').html('<%= j(render(:partial => "schedules/home/left_upcoming_opponents", :collection => @upcoming_opponents, :as => :opponent)) %>');
  $('#schedule-sync-opponent-container').html('<%= j(render(:partial => "schedules/home/lightbox_schedule_sync_opponent")) %>')
  $('#schedule-sync-modal').modal();
<% end %>