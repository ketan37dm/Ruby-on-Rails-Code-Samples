<div class="content-left span4">
  <div class="content-block">
    <h2>Schedule</h2>
    <ul class="nav pull-right rhs-dropdown rhs2">                                         
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" id="show-schedule" data-toggle="dropdown">
            <i class="icon-down pull-right"></i>
        </a>
      </li>
    </ul>
    
    <div id="schedule-left-top" style="display:none;">
      <div class="scroll">
        <a href="#" id="addOpponentEvent" class="btn btn-default set-heigt-30">
