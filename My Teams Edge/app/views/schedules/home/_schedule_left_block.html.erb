        </a>
        
        <%= link_to(previous_opponents_schedules_home_index_path, :remote => true, :class => "btn btn-default set-heigt-30") do %>
          <span class="pull-left">View Previous Events</span>
        <% end %>

        <div id="scedule-previous-oppnents">
        </div>
      </div>
    </div>

    <h2>Upcoming Opponents</h2>

    <hr>
    <div id="scedule-upcoming-oppnents">
      <div class="scroll">
        <%= render(:partial => "schedules/home/left_upcoming_opponents", :collection => @upcoming_opponents, :as => :opponent) %>
      </div>
    </div>
  </div>
</div>