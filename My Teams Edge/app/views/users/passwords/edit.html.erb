<div class="container">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , :class => "form-signin form-signup login-box-margin"}) do |f| %>
	<h2 class="form-signin-heading">Change your password</h2>
    <%= f.error_messages  %> 
	  <%= f.hidden_field :reset_password_token %>
	  <fieldset>
		  <div><%= f.label :password, "New password", :class => "input-block-level" %>
		  <%= f.password_field :password, class: "input-xlarge" %></div>
		  <div><%= f.label :password_confirmation, "Confirm new password", :class => "input-block-level" %>
		  <%= f.password_field :password_confirmation, class: "input-xlarge" %></div>

		  <div><%= f.submit "Change my password", class: "btn btn-primary" %></div>
	  </fieldset>
	<% end %>
</div>
