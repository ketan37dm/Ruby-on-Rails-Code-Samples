<% if @register_account %> 
  <%= render :partial => "register_account" %> 
<% else %> 
  <div class="container">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-signin form-signup login-box-margin" }) do |f| %>
      <h2 class="form-signin-heading">Forgot your password?</h2>
      <fieldset>
        <%= f.error_messages %>
        <div>
          <label class="input-block-level">Email</label>
          <%= f.email_field :email, class: "input-xlarge", placeholder: "Userame / Email" %>
        </div>

        <div><%= f.submit "Reset Password", class: "btn btn-primary" %></div>
      </fieldset>
    <% end %>
  </div>
<% end %> 
