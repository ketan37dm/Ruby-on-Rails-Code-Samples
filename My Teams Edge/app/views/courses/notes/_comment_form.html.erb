<%= form_for @comment, :url => add_comment_courses_path(:id => course.id), :method => :post, :remote => true  do |f| %>
  <%= f.hidden_field :commentator_id, :value => current_user.id %>
  <%= f.text_area :content, :rows => 1, :placeholder => "Add a new comment" %>   
  <%= f.submit "Add Comment" %>
<% end %>