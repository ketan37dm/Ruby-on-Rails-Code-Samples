<%= form_for @comment, :url => add_comment_contacts_path(:id => contact.id), :method => :post, :remote => true  do |f| %>
  <%= f.hidden_field :commentator_id, :value => current_user.id %>
  <%= f.text_area :content, :rows => 1, :placeholder => "Add a new comment", id: "comment_content_#{contact.id}" %>   
  <%= f.submit "Add Comment" %>
<% end %>