<div id="fb-root"></div>
<script src='http://connect.facebook.net/en_US/all.js'></script>
<script type="text/javascript">
  FB.init({appId: "<%= FACEBOOK_CONFIG[:app_id] %>", status: true, cookie: true});

  function postToFeed(postLink, logo, description) {

    // calling the API ...
    var obj = {
      method: 'feed',
      link: postLink,
      picture: logo,
      name: 'Mind Your Pitch',
      caption: 'How is that?',
      description: description
    };

    function callback(response) {
      document.getElementById('msg').innerHTML = "Post ID: " + response['post_id'];
    }

    FB.ui(obj, callback);
    return false;
  }
</script>

