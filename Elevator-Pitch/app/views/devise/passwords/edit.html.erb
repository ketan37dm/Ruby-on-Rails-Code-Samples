<div class="hero-unit new-pitch-unit">
  <h2>Change your password</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div><label for="user_password">Password</label><br/>
      <%= f.password_field :password %></div>

    <div><label for="user_password_confirmation">Confirm new Password</label><br/>
      <%= f.password_field :password_confirmation %></div>

    <div><%= f.submit "Change my password", :class => "btn btn-primary" %></div>
  <% end %>
</div>
